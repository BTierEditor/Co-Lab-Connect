<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile_bg"
    tools:context=".Profile">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        app:title="Set-up your Profile"
        app:titleMarginStart="110dp"
        app:titleTextColor="@color/white"
        android:layout_height="50dp"
        android:layout_marginTop="3dp"
        android:elevation="15dp"
        android:background="@drawable/toolbar_shape"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="681dp"
        android:layout_marginTop="50dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image_view"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/circular_background"
                android:src="@drawable/account_white" />
            <TextView
                android:id="@+id/edit_profile_picture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:gravity="center_horizontal"
                android:textSize="15dp"
                android:textColor="@color/black"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/setup_name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/custom_edittext"
                android:gravity="center"
                android:hint="Enter Your Name"
                android:singleLine="true"
                android:textColor="#000000"
                android:textColorHint="@color/gray" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/setup_age"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_edittext"
                android:gravity="center"
                android:hint="Enter Your age"
                android:inputType="number|numberDecimal"
                android:singleLine="true"
                android:textColor="#000000"
                android:textColorHint="@color/gray" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/setup_Enrollmentno"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_edittext"
                android:gravity="center"
                android:hint="Enter Your Enrollment"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="#000000"
                android:textColorHint="@color/gray" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/setup_class"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_edittext"
                android:gravity="center"
                android:hint="Enter Your class eg.TYCO1"
                android:inputType="text"
                android:singleLine="true"
                android:textColor="#000000"
                android:textColorHint="@color/gray" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/setup_number"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_edittext"
                android:gravity="center"
                android:hint="Enter Phone Number"
                android:inputType="phone"
                android:singleLine="true"
                android:textColor="#000000"
                android:textColorHint="@color/gray" />

            <!--            <androidx.appcompat.widget.AppCompatAutoCompleteTextView-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:gravity="center"-->
            <!--                android:layout_marginTop="640dp"-->
            <!--                android:text="Created by B-Tier Editor"/>-->

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/terms_and_conditions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:checked="false"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp"
                android:text="I have read all the Terms and Conditions"
                android:textColor="@color/white"
                android:textColorHighlight="#FDFDFD"
                android:textColorLink="#FFFFFF" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Terms and Conditions"
                android:textColor="@color/red"
                android:layout_marginTop="0dp"
                android:textColorHighlight="#FFFFFF"
                android:textColorLink="#FFFFFF" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/proceede_button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Submit"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:background="@drawable/register_login_btn_design"
                android:layout_marginHorizontal="50dp"/>
        </LinearLayout>

    </ScrollView>
</RelativeLayout>