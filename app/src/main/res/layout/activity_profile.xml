<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C4E18643"
    tools:context=".Profile">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        app:title="Set-up your Profile"
        app:titleMarginStart="110dp"
        app:titleTextColor="@color/white"
        android:layout_height="50dp"
        android:layout_marginTop="3dp"
        android:elevation="15dp"
        android:background="@drawable/toolbar_shape"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="681dp"
        android:layout_marginTop="50dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/profile_picture"
                android:layout_width="130dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/account_logo"/>
            <TextView
                android:id="@+id/edit_profile_picture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:layout_marginTop="120dp"
                android:gravity="center_horizontal"
                android:textSize="15dp"
                android:textColor="@color/black"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/setup_name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="190dp"
                android:background="@drawable/custom_edittext"
                android:gravity="center"
                android:hint="Enter Your Name"
                android:singleLine="true"
                android:textColor="#000000"
                android:textColorHint="@color/gray" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/setup_age"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="240dp"
                android:background="@drawable/custom_edittext"
                android:gravity="center"
                android:hint="Enter Your age"
                android:inputType="number|numberDecimal"
                android:singleLine="true"
                android:textColor="#000000"
                android:textColorHint="@color/gray" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/setup_Enrollmentno"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="290dp"
                android:background="@drawable/custom_edittext"
                android:gravity="center"
                android:hint="Enter Your Enrollment"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="#000000"
                android:textColorHint="@color/gray" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/setup_class"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="340dp"
                android:background="@drawable/custom_edittext"
                android:gravity="center"
                android:hint="Enter Your class eg.TYCO1"
                android:inputType="text"
                android:singleLine="true"
                android:textColor="#000000"
                android:textColorHint="@color/gray" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/setup_number"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="390dp"
                android:background="@drawable/custom_edittext"
                android:gravity="center"
                android:hint="Enter Phone Number"
                android:inputType="phone"
                android:singleLine="true"
                android:textColor="#000000"
                android:textColorHint="@color/gray" />

            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="640dp"
                android:text="Created by B-Tier Editor"/>

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/terms_and_conditions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:checked="false"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="520dp"
                android:text="I have read all the Terms and Conditions"
                android:textColor="@color/white"
                android:textColorHighlight="#FDFDFD"
                android:textColorLink="#FFFFFF" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Terms and Conditions"
                android:textColor="@color/red"
                android:layout_marginTop="560dp"
                android:textColorHighlight="#FFFFFF"
                android:textColorLink="#FFFFFF" />
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/proceede_button"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="590dp"
                app:lottie_rawRes="@raw/button"
                app:lottie_loop="true"
                app:lottie_autoPlay="true"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Proceede"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="15dp"
                android:layout_marginTop="625dp"/>
        </RelativeLayout>

    </ScrollView>
</RelativeLayout>