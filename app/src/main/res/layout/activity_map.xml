                android:layout_width="match_parent"
                android:gravity="center"
                android:textSize="18dp"
                android:layout_height="match_parent"
                android:text="Main Junction"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:id="@+id/box_card"
        android:layout_width="180dp"
        android:layout_height="170dp"
        android:rotation="90"

        android:visibility="gone"

        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:cardCornerRadius="20dp">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/light_gray"
            android:layout_gravity="center">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/navigation_click"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Navigation"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="10dp"
                android:drawableLeft="@drawable/location_white"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/image_click"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Image"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                android:drawableLeft="@drawable/image_white"/>
            <ImageView
                android:id="@+id/card_back_button"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:src="@drawable/back_button_logo"
                android:rotation="270"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/navigation_pannel"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="40dp"

        android:visibility="gone"

        app:cardCornerRadius="30dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="@color/Orange">
                <ImageView
                    android:id="@+id/navigation_back_button"
                    android:layout_width="100px"
                    android:layout_marginVertical="10px"
                    android:layout_height="match_parent"
                    android:src="@drawable/back_button_logo"
                    android:layout_marginStart="30px"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Navigation"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="60px"
                    android:layout_marginVertical="20px"/>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="130px">
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/current_location"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_marginTop="35px"
                android:textColorHint="@color/gray"
                android:textColor="@color/black"
                android:layout_height="120px"
                android:layout_marginHorizontal="20px"
                android:hint="Enter Your Current Location"
                android:background="@drawable/custom_edittext"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:textAlignment="center"

                android:src="@drawable/down_arrow_white"/>
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/destination_location"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:maxLines="1"
                android:layout_height="120px"
                android:layout_marginHorizontal="20px"
                android:textColorHint="@color/gray"
                android:textColor="@color/black"
                android:hint="Enter Your Destination"
                android:background="@drawable/custom_edittext"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/start_journey_button"
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:textColor="@color/black"
                android:text="Start journey"
                android:layout_marginHorizontal="45px"
                android:background="@drawable/custom_button_2"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>